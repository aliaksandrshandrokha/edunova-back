# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
DB_NAME=edunova_db
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

# JWT Settings (optional - defaults provided)
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=60
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Unsplash API Configuration
# Use your Unsplash Access Key (also called Application ID) as the Client-ID
UNSPLASH_ACCESS_KEY=your_unsplash_access_key_here

# YouTube Data API Configuration
YOUTUBE_API_KEY=your_youtube_api_key_here

# Frontend URL (for CORS in production)
# Set this to your deployed frontend URL
# Example: https://edu-nova-zeta.vercel.app
# Leave empty for development (localhost is already allowed)
FRONTEND_URL=

# Render-specific (automatically set by Render, no need to configure)
# RENDER_EXTERNAL_HOSTNAME is automatically provided by Render
# PORT is automatically provided by Render for web services (used in Procfile: gunicorn --bind 0.0.0.0:$PORT)
#   - On Render: Do NOT set PORT manually - Render sets it automatically
#   - For local development with Gunicorn: You can set PORT=8000 (optional, defaults to 8000)
#   - For local development with Django dev server: PORT is not used (use: python manage.py runserver)
